<!--index.wxml-->
<view class="container container-around">
	<view>
		<textarea
			class="editor"
			bindinput="bindFormSubmit"
			placeholder="说些什么吧..."/>
		<mp-uploader
			class="picker"
			bindfail="uploadError"
			bindsuccess="uploadSuccess"
			upload="{{uplaodFile}}" files="{{files}}" max-count="9" title="图片上传" />
	</view>
	<button bindtap="submit"> 提交 </button>
</view>